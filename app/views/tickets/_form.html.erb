<%= form_with(model: ticket) do |form| %>
  <% if ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
        <% ticket.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>




  <div class="field">
    <%= form.label :status %>
    <%= select_tag 'ticket[status]', options_for_select(["Open","Pending","Resolved","Closed"]) %>
  </div>

  <div class="field">
    <%= form.label :priority %>
    <%= select_tag 'ticket[priority]', options_for_select(["High","Medium","Low"])%>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
